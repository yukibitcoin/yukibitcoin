{
  "manifest_version": 3,
  "name": "Bandwidth Saver",
  "version": "1.3",
  "description": "Blocks images and videos to save bandwidth.",
  "permissions": ["declarativeNetRequest", "scripting"],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block-media",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}